{# Minimal custom Arabic homepage template - catalog/view/theme/journal3/template/common/custom_arabic_home.twig #}
{{ header }}

<div class="custom-sale-banner">حصل على خصم 20٪ قبل نهاية الشهر — تسوق الآن!</div>

<div class="container" style="margin-top:20px; direction:rtl;">
  <div class="row">
    {% if products %}
      {% for product in products %}
        <div class="col-lg-3 col-md-4 col-sm-6">
          <div class="custom-product-card">
            <div class="image" style="background-image:url('{{ product.thumb }}'); background-size:cover; height:220px;"></div>
            <div class="info">
              <div class="product-name">{{ product.name }}</div>
              <div class="product-price">
                {% if product.special %}
                  <span style="text-decoration:line-through;opacity:.6;">{{ product.price }}</span>
                  <span style="margin-right:8px;">{{ product.special }}</span>
                {% else %}
                  {{ product.price }}
                {% endif %}
              </div>
              <button type="button" onclick="cart.add('{{ product.product_id }}');" class="add-to-cart-btn">أضف إلى السلة</button>
            </div>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <div class="col-12">لا توجد منتجات لعرضها</div>
    {% endif %}
  </div>
</div>

{{ footer }}